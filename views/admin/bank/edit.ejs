<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Bank </a></li>
              <li class="breadcrumb-item active">Rubah</li>

            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Form Rubah Bank "<%- bank.name %>"</h3>
              </div>
              <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label>Nama</label>
                   
                    <input type="text" value="<%= bank.name %>" name="name" class="form-control" id="name"  required>
                  </div>
                  <div class="form-group">
                    <label for="bankName">Jumlah Koin</label>
                    <input type="text" value= "<%= bank.bankName %>" name="bankName" class="form-control" id="bankName"  required>
                  </div>      
                  <div class="form-group">
                    <label for="noRekening">Harga</label>
                    <input type="number" value= "<%= bank.noRekening %>"name="noRekening" class="form-control" id="noRekening" required>
                  </div>               
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
              </form>
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<%- include ../../partials/footer.ejs %>
